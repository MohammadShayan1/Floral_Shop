<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jav Florist -Home </title>


    <!-- slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.1.3/assets/owl.carousel.min.css" />

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/shop/css/bootstrap.css" />

    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Chettan|Poppins:400,600,700&display=swap" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/shop/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/shop/css/responsive.css" rel="stylesheet" />
</head>
<body>

            <!-- header section strats -->
           
            <!-- end header section -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- info section -->
    <section class="info_section layout_padding">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="info_logo">
                        <h5>
                            Fior
                        </h5>
                        <p>
                            There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration
                        </p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info_links pl-lg-5">
                        <h5>
                            Useful Link
                        </h5>
                        <ul>
                            <li class="active">
                                <a asp-controller="User" asp-action="Index">
                                    Home
                                </a>
                            </li>
                            <li>
                                <a asp-controller="User" asp-action="About">
                                    About
                                </a>
                            </li>
                            <li>
                                <a asp-controller="User" asp-action="Gallery">
                                    Gallery
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info_insta">
                        <h5>
                            Instagram
                        </h5>
                        <div class="insta_container">
                            <div>
                                <a href="">
                                    <div class="insta-box b-1">
                                                <img src="~/shop/images/insta-1.png" alt="">
                                    </div>
                                </a>
                                <a href="">
                                    <div class="insta-box b-2">
                                                <img src="~/shop/images/insta-2.png" alt="">
                                    </div>
                                </a>
                            </div>
                            <div>
                                <a href="">
                                    <div class="insta-box b-3">
                                                <img src="~/shop/images/insta-3.png" alt="">
                                    </div>
                                </a>
                                <a href="">
                                    <div class="insta-box b-4">
                                                <img src="~/shop/images/insta-4.png" alt="">
                                    </div>
                                </a>
                            </div>
                            <div>
                                <a href="">
                                    <div class="insta-box b-3">
                                        <img src="~/shop/images/insta-5.png" alt="">
                                    </div>
                                </a>
                                <a href="">
                                    <div class="insta-box b-4">
                                                <img src="~/shop/images/insta-6.png" alt="">
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="info_contact">
                        <h5>
                            Contact
                        </h5>
                        <div>
                                    <img src="~/shop/images/location-white.png" alt="">
                            <p>
                                It is a long
                                fact that a reader
                            </p>
                        </div>
                        <div>
                                    <img src="~/shop/images/telephone-white.png" alt="">
                            <p>
                                +01 1234567890
                            </p>
                        </div>
                        <div>
                                    <img src="~/shop/images/envelope-white.png" alt="">
                            <p>
                                demo@gmail.com
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- end info_section -->

            <script type="text/javascript" src="~/shop/js/jquery-3.4.1.min.js"></script>
            <script type="text/javascript" src="~/shop//bootstrap.js"></script>
            <script type="text/javascript" src="~/shop//custom.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

